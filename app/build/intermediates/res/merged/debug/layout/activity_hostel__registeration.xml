<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xoxytech.ostello.Hostel_Registeration">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        android:background="#ffffff"

        >
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="1.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:id="@+id/cardviewregisterhostel"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            tools:context="com.example.user.registeration.MainActivity"
            app:cardCornerRadius="2dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtregisterhostel"
                android:text="Register your hostel"
                android:textSize="25dp"
                android:layout_marginLeft="85dp"
                android:paddingTop="5dp"
                android:textColor="#ffffff"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:id="@+id/layoutpersonalinfo"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            tools:context="com.example.user.registeration.MainActivity"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp"
            android:layout_below="@+id/cardviewregisterhostel">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtusername"
                    android:layout_width="wrap_content"
                    android:focusableInTouchMode="true"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Name *"
                    android:textSize="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/txtpersonneldetail"
                    android:layout_alignParentStart="true" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextusername"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:text="John"
                    android:inputType="none"
                    android:editable="false"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/style"
                    android:layout_below="@+id/txtpersonneldetail"
                    android:layout_toEndOf="@+id/txtmobilenumber1"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile number1 *"
                    android:textSize="15dp"
                    android:id="@+id/txtmobilenumber1"
                    android:layout_below="@+id/txtusername"
                    android:layout_alignStart="@+id/txtusername"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextmobile1"
                    android:focusable="true"
                    android:text="9764200290"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="none"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:layout_below="@+id/editTextusername"
                    android:layout_toEndOf="@+id/txtmobilenumber1"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile number2 *"
                    android:textSize="15dp"
                    android:id="@+id/txtmobilenumber2"
                    android:layout_below="@+id/txtmobilenumber1"
                    android:layout_marginTop="8dp"
                    android:layout_alignStart="@+id/txtmobilenumber1" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextmobile2"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="phone"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:maxLength="10"
                    android:layout_below="@+id/editTextmobile1"
                    android:layout_toEndOf="@+id/txtmobilenumber1"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txtpersonneldetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/txtusername"
                    android:focusableInTouchMode="true"
                    android:text="Personnel Details"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:id="@+id/layouthostelinfo"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:layout_below="@id/layoutpersonalinfo"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel Details"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:id="@+id/txthosteldetails"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel name *"
                    android:id="@+id/txthostelname"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@+id/editTexthostelname"
                    android:layout_alignBottom="@+id/editTexthostelname"
                    android:layout_marginStart="5dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTexthostelname"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:layout_below="@+id/txthosteldetails"
                    android:layout_marginLeft="135dp"
                    android:paddingLeft="5dp"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtaddress"
                    android:text="Address *"
                    android:textSize="15dp"
                    android:layout_above="@+id/price"
                    android:layout_below="@+id/editTexthostelname"
                    android:layout_alignStart="@+id/txthostelname"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextaddress"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:layout_below="@+id/editTexthostelname"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="5dp"/>
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price *"
                    android:id="@+id/txtprice"
                    android:layout_below="@+id/editTextaddress"
                    android:layout_alignStart="@+id/txtaddress"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextprice"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:layout_below="@+id/editTextaddress"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacancy *"
                    android:id="@+id/textvacancy"
                    android:layout_below="@+id/editTextprice"
                    android:layout_alignEnd="@+id/txtaddress"
                    android:layout_alignStart="@+id/txtaddress"
                    android:layout_marginTop="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextvacancy"
                    android:focusable="true"
                    android:textColor="#bcbcbc"
                    android:focusableInTouchMode="true"
                    android:inputType="number"
                    android:editable="false"
                    android:background="@drawable/style"
                    android:layout_below="@+id/editTextprice"
                    android:layout_marginLeft="135dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="5dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txttype"
                    android:text="Type *"
                    android:textSize="15dp"
                    android:layout_below="@+id/textvacancy"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_marginRight="15dp"
                    android:layout_below="@+id/textvacancy"
                    android:layout_marginLeft="135dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtgender"
                    android:text="Gender *"
                    android:textSize="15dp"
                    android:layout_below="@+id/txttype"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/radioGroup"
                    android:weightSum="3"
                    android:layout_alignTop="@+id/txtgender"
                    android:layout_marginLeft="110dp">


                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:layout_weight="1"
                        android:inputType="textAutoComplete"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:layout_weight="1"
                        android:id="@+id/male"
                        android:inputType="textAutoComplete"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co-ed"
                        android:layout_weight="1"
                        android:id="@+id/coed"
                        android:inputType="textAutoComplete"/>
                </RadioGroup>

            </RelativeLayout>
        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:layout_marginTop="0dp"
            android:id="@+id/layouttoggle"
            android:layout_below="@id/layouthostelinfo"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/type"
                android:layout_alignParentStart="true"
                android:id="@+id/togglerelative">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel Facilities"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/txthostelfacilities"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativetoggle1"
                    android:weightSum="3"
                    android:layout_below="@+id/txthostelfacilities">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:id="@+id/toggleElevator"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/togglelift"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/toggleElevator"
                            android:text="Elevator"
                            android:layout_gravity="center"
                            >

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <ToggleButton
                            android:id="@+id/toggleDrinkingwater"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@id/toggleElevator"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/drinking_water"
                            android:layout_weight="1"
                            android:layout_marginTop="3dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleDrinkingwater"
                            android:layout_alignStart="@+id/toggleDrinkingwater"
                            android:text="Drinking Water"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            >

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:id="@+id/toggleCot"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="3dp"
                            android:layout_toRightOf="@id/toggleDrinkingwater"
                            android:layout_weight="1"
                            android:background="@drawable/cot"
                            android:textOff=""
                            android:textOn=""
                            android:textAlignment="center"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleCot"
                            android:layout_alignStart="@+id/toggleCot"
                            android:text="Cot"
                            android:textAlignment="center"
                            android:layout_gravity="center">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativetoggle2"
                    android:layout_below="@+id/relativetoggle1"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:id="@+id/togglecctv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@drawable/cctv"
                            android:textOff=""
                            android:textOn=""
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"

                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/togglecctv"
                            android:layout_alignStart="@+id/togglecctv"
                            android:text="CCTV"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:id="@+id/toggleAc"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/ac"
                            android:layout_weight="1"
                            android:layout_toRightOf="@id/togglecctv"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleAc"
                            android:layout_alignStart="@+id/toggleAc"
                            android:text="AC"
                            android:layout_gravity="center"
                            android:paddingLeft="45dp"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:id="@+id/toggleElectricity"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/electricity"
                            android:layout_weight="1"
                            android:layout_toRightOf="@+id/toggleAc"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleElectricity"
                            android:layout_alignStart="@+id/toggleElectricity"
                            android:text="Electricity"
                            android:layout_gravity="center"
                            android:paddingLeft="25dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativetoggle3"
                    android:layout_below="@+id/relativetoggle2"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ToggleButton
                            android:id="@+id/toggleGym"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/gym"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleGym"
                            android:layout_alignStart="@+id/toggleGym"
                            android:text="Gym"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">


                        <ToggleButton
                            android:id="@+id/toggleHotwater"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/hot_water"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/toggleGym"/>


                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleHotwater"
                            android:layout_alignStart="@+id/toggleHotwater"
                            android:text="Hot Water"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:id="@+id/toggleTV"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_toRightOf="@+id/toggleHotwater"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/tv"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleTV"
                            android:layout_alignStart="@+id/toggleTV"
                            android:text="TV"
                            android:layout_gravity="center"
                            android:paddingLeft="15dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativetoggle4"
                    android:layout_below="@+id/relativetoggle3"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ToggleButton
                            android:id="@+id/toggleCleaning"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="0dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/cleaning"
                            android:layout_gravity="center"

                            />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/toggleCleaning"
                            android:layout_alignStart="@+id/toggleCleaning"
                            android:text="Cleaning"
