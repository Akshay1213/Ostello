<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdddf"
    android:scrollbarStyle="insideOverlay"
    tools:context="com.xoxytech.ostello.HostelDetails"
    >

    <RelativeLayout
        android:id="@+id/layouthostelcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp">


        <TextView
            android:id="@+id/textViewHostelname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/whiteround"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Hostel Name"
            android:textSize="30dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:id="@+id/sliderlayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewHostelname"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textViewcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sliderlayout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/roundprice"
            android:gravity="center"
            android:padding="5dp"
            android:text="Category"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView

            android:id="@+id/textViewtype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/textViewcategory"
            android:layout_alignBottom="@+id/textViewcategory"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundprice"
            android:gravity="center"
            android:padding="5dp"
            android:text="Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewtype"
            android:layout_alignBottom="@+id/textViewtype"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:background="@drawable/roundprice"
            android:gravity="center"
            android:padding="5dp"
            android:paddingTop="10dp"
            android:text="rate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible" />


        <android.support.v7.widget.CardView
            android:id="@+id/detailslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sliderlayout"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="?android:attr/selectableItemBackground"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="Hostel Details"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:text="Vacancy : "
        android:textSize="15dp" />
    <TextView
        android:id="@+id/textViewvacancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Vacancies"
        android:textSize="15dp" />






    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3"
        android:text="Address : "
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView4"
        android:maxLines="2"
        android:lines="1"
        android:text="Address : "
        android:textSize="15dp" />



    <TextView
        android:id="@+id/city1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewaddress"
        android:text="City         : "
        android:textSize="15dp" />
    <TextView
        android:id="@+id/textViewcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/city1"
        android:layout_below="@+id/textViewaddress"
        android:text="city"
        android:textSize="15dp" />
</RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/featurescard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/detailslayout"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">


            <RelativeLayout
                android:id="@+id/togglerelative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/type"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txthostelfacilities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:text="Hostel Facilities"

                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/toggleElevator"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/togglelift"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/toggleElevator"
                    android:layout_below="@+id/toggleElevator"
                    android:text="Elevator"
                    android:textAlignment="center">

                </TextView>

                <ToggleButton
                    android:id="@+id/toggleDrinkingwater"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/toggleElevator"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/toggleElevator"
                    android:background="@drawable/drinking_water"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleDrinkingwater"
                    android:layout_below="@+id/toggleDrinkingwater"
                    android:text="Drinking Water"
                    android:textAlignment="center">

                </TextView>

                <ToggleButton
                    android:id="@+id/toggleCot"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/toggleDrinkingwater"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/cot"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleCot"
                    android:layout_below="@+id/toggleCot"
                    android:text="Cot"
                    android:textAlignment="center">

                </TextView>

                <ToggleButton
                    android:id="@+id/togglecctv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleElevator"
                    android:layout_below="@+id/toggleElevator"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/cctv"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/togglecctv"
                    android:layout_below="@+id/togglecctv"
                    android:text="CCTV"
                    android:textAlignment="center">

                </TextView>

                <ToggleButton
                    android:id="@+id/toggleAc"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleDrinkingwater"
                    android:layout_alignTop="@+id/togglecctv"
                    android:background="@drawable/ac"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleAc"
                    android:layout_below="@+id/toggleAc"
                    android:text="AC"
                    android:textAlignment="center">

                </TextView>

                <ToggleButton
                    android:id="@+id/toggleElectricity"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleCot"
                    android:layout_alignTop="@+id/toggleAc"
                    android:background="@drawable/electricity"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/toggleElectricity"
                    android:layout_below="@+id/toggleElectricity"
                    android:text="Electricity"
                    android:textAlignment="center"

                    />

                <ToggleButton
                    android:id="@+id/toggleGym"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/togglecctv"
                    android:layout_below="@+id/togglecctv"
                    android:layout_marginTop="37dp"
                    android:background="@drawable/gym"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleGym"
                    android:layout_below="@+id/toggleGym"
                    android:text="Gym"
                    android:textAlignment="center"


                    />


                <ToggleButton
                    android:id="@+id/toggleHotwater"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleAc"
                    android:layout_alignTop="@+id/toggleGym"
                    android:background="@drawable/hot_water"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />
                />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleHotwater"
                    android:layout_below="@+id/toggleHotwater"
                    android:text="Hot Water"
                    android:textAlignment="center"


                    />

                <ToggleButton
                    android:id="@+id/toggleTV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/toggleHotwater"
                    android:layout_alignStart="@+id/toggleElectricity"
                    android:background="@drawable/tv"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleTV"
                    android:layout_below="@+id/toggleTV"
                    android:text="TV"
                    android:textAlignment="center"


                    />

                <ToggleButton
                    android:id="@+id/toggleCleaning"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleGym"
                    android:layout_below="@+id/toggleGym"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/cleaning"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleCleaning"
                    android:layout_below="@+id/toggleCleaning"
                    android:text="Cleaning"
                    android:textAlignment="center"


                    />

                <ToggleButton
                    android:id="@+id/toggleParking"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/toggleCleaning"
                    android:layout_marginStart="80dp"
                    android:layout_toEndOf="@+id/toggleCleaning"
                    android:background="@drawable/parking"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleParking"
                    android:layout_below="@+id/toggleParking"
                    android:text="Parking"
                    android:textAlignment="center"

                    />

                <ToggleButton
                    android:id="@+id/toggleWashingmachine"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@+id/toggleTV"
                    android:layout_alignTop="@+id/toggleParking"
                    android:background="@drawable/washingmachine"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignStart="@+id/toggleWashingmachine"
                    android:layout_below="@+id/toggleWashingmachine"
                    android:layout_marginRight="25dp"

                    android:text="Washing Machine"
                    android:textAlignment="center" />

                <ToggleButton
                    android:id="@+id/toggleMess"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignStart="@+id/toggleCleaning"
                    android:layout_below="@+id/toggleCleaning"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/mess"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />


                <TextView
                    android:id="@+id/txtmess"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleMess"
                    android:layout_below="@+id/toggleMess"
                    android:text="Mess"
                    android:textAlignment="center" />

                <ToggleButton
                    android:id="@+id/toggleStudytable"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/toggleMess"
                    android:layout_alignBottom="@+id/toggleMess"
                    android:layout_alignStart="@+id/txt1"
                    android:background="@drawable/studytable"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/txtstudytable"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleStudytable"
                    android:layout_below="@+id/toggleStudytable"
                    android:text="Study table"
                    android:textAlignment="center" />

                <ToggleButton
                    android:id="@+id/toggleWifi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/toggleStudytable"
                    android:layout_alignBottom="@+id/toggleStudytable"
                    android:layout_marginLeft="280dp"
                    android:background="@drawable/togglewifi"
                    android:clickable="false"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/txtwifi"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignStart="@+id/toggleWifi"
                    android:layout_below="@+id/toggleWifi"
                    android:text="Wifi"
                    android:textAlignment="center" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/mapscard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/featurescard"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:cameraBearing="112.5"
                map:cameraTilt="30"
                map:cameraZoom="13"
                map:mapType="normal"
                map:uiCompass="true"
                map:uiRotateGestures="true"
                map:uiScrollGestures="true"
                map:uiTiltGestures="true"
                map:uiZoomControls="true"
                map:uiZoomGestures="true"
                tools:context="com.xoxytech.ostello.MapsActivity"
                tools:ignore="MissingPrefix" />


        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapscard"
            android:layout_marginBottom="50dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:paddingTop="10dp"
                        android:text="Description:Hostels provide budget-oriented, sociable accommodation where guests can rent a bed, usually a bunk bed, in a dormitory and share a bathroom, lounge and sometimes a kitchen. Rooms can be mixed or single-sex, and private rooms may also be available."
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/textViewtandc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewDescription"
                        android:padding="15dp"
                        android:paddingTop="10dp"
                        android:text="Terms And Conditions"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="italic" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <Button
            android:id="@+id/btnenquirenow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Enquire Now"
            android:textColor="@color/white" />


    </RelativeLayout>


</ScrollView>
