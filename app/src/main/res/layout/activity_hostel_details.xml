    <android.support.v7.widget.CardView
        android:id="@+id/featurescard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detailslayout"
        android:layout_marginTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewfacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:text="Facilities"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                tools:context="com.example.user.facility.MainActivity">

                <RelativeLayout
                    android:id="@+id/layoutfacility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/layouttype">

                    <ToggleButton
                        android:id="@+id/toggleElevator"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/togglelift"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtElevator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/toggleElevator"
                        android:layout_below="@+id/toggleElevator"
                        android:text="Elevator"
                        android:textAlignment="center">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/toggleDrinkingwater"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/toggleElevator"
                        android:layout_marginStart="60dp"
                        android:layout_toEndOf="@+id/toggleElevator"
                        android:background="@drawable/drinking_water"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtDrinkingwater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/toggleDrinkingwater"
                        android:layout_below="@+id/toggleDrinkingwater"
                        android:text="Drinking Water"
                        android:textAlignment="center">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/toggleCot"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/toggleDrinkingwater"
                        android:layout_marginEnd="50dp"
                        android:background="@drawable/cot"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtCot"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleCot"
                        android:layout_below="@+id/toggleCot"
                        android:layout_marginRight="30dp"
                        android:text="Cot"
                        android:textAlignment="center">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/togglecctv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleElevator"
                        android:layout_below="@+id/toggleElevator"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/cctv"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtcctv"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/togglecctv"
                        android:layout_below="@+id/togglecctv"
                        android:text="CCTV">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/toggleAc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleDrinkingwater"
                        android:layout_alignTop="@+id/togglecctv"
                        android:background="@drawable/ac"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtAc"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleAc"
                        android:layout_below="@+id/toggleAc"
                        android:text="AC"
                        android:textAlignment="center">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/toggleElectricity"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleCot"
                        android:layout_alignTop="@+id/toggleAc"
                        android:background="@drawable/electricity"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtElectricity"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleElectricity"
                        android:layout_below="@+id/toggleElectricity"
                        android:text="Electricity"
                        android:textAlignment="center" />

                    <ToggleButton
                        android:id="@+id/toggleGym"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/togglecctv"
                        android:layout_below="@+id/togglecctv"
                        android:layout_marginTop="37dp"
                        android:background="@drawable/gym"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtGym"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleGym"
                        android:layout_below="@+id/toggleGym"
                        android:text="Gym"
                        android:textAlignment="center" />


                    <ToggleButton
                        android:id="@+id/toggleHotwater"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleAc"
                        android:layout_alignTop="@+id/toggleGym"
                        android:background="@drawable/hot_water"
                        android:textOff=""
                        android:textOn="" />
                    />

                    <TextView
                        android:id="@+id/txtHotwater"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleHotwater"
                        android:layout_below="@+id/toggleHotwater"
                        android:text="Hot Water"
                        android:textAlignment="center" />

                    <ToggleButton
                        android:id="@+id/toggleTV"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignBottom="@+id/toggleHotwater"
                        android:layout_alignStart="@+id/toggleElectricity"
                        android:background="@drawable/tv"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtTV"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleTV"
                        android:layout_below="@+id/toggleTV"
                        android:text="TV"
                        android:textAlignment="center" />

                    <ToggleButton
                        android:id="@+id/toggleCleaning"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleGym"
                        android:layout_below="@+id/toggleGym"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/cleaning"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtCleaning"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleCleaning"
                        android:layout_below="@+id/toggleCleaning"
                        android:text="Cleaning"
                        android:textAlignment="center" />

                    <ToggleButton
                        android:id="@+id/toggleParking"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/toggleCleaning"
                        android:layout_marginStart="60dp"
                        android:layout_toEndOf="@+id/toggleCleaning"
                        android:background="@drawable/parking"
                        android:textOff=""
                        android:textOn="" />

                    <TextView
                        android:id="@+id/txtparking"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleParking"
                        android:layout_below="@+id/toggleParking"
                        android:text="Parking"
                        android:textAlignment="center"

                        />

                    <ToggleButton
                        android:id="@+id/toggleWashingmachine"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_alignEnd="@+id/toggleTV"
                        android:layout_alignStart="@+id/toggleTV"
                        android:layout_alignTop="@+id/toggleParking"
                        android:background="@drawable/washingmachine"
                        android:textOff=""
                        android:textOn="" />


                    <TextView
                        android:id="@+id/txtWashingmachine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/toggleTV"
                        android:layout_below="@+id/toggleWashingmachine"
                        android:layout_marginRight="35dp"
                        android:text="Washing Machine"
                        android:textAlignment="center" />

                    <ToggleButton
                        android:id="@+id/toggleMess"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignStart="@+id/toggleCleaning"
                        android:layout_below="@+id/toggleCleaning"
                        android:layout_marginTop="48dp"
                        android:background="@drawable/mess"
                        android:textOff=""
                        android:textOn="">

                    </ToggleButton>

                    <TextView
                        android:id="@+id/txtMess"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/toggleMess"
                        android:layout_below="@+id/toggleMess"
                        android:text="Mess"
                        android:textAlignment="center" />
                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/mapscard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/featurescard"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            map:cameraBearing="112.5"
            map:cameraTilt="30"
            map:cameraZoom="13"
            map:mapType="normal"
            map:uiCompass="true"
            map:uiRotateGestures="true"
            map:uiScrollGestures="true"
            map:uiTiltGestures="true"
            map:uiZoomControls="true"
            map:uiZoomGestures="true"
            tools:context="com.xoxytech.ostello.MapsActivity"
            tools:ignore="MissingPrefix" />



    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapscard"
        android:layout_marginBottom="50dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="false">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:id="@+id/textViewDescription"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:paddingTop="10dp"
                   android:text="Description:Hostels provide budget-oriented, sociable accommodation where guests can rent a bed, usually a bunk bed, in a dormitory and share a bathroom, lounge and sometimes a kitchen. Rooms can be mixed or single-sex, and private rooms may also be available."
                   android:textStyle="italic" />
               <TextView
                   android:id="@+id/textViewtandc"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/textViewDescription"
                   android:padding="15dp"
                   android:paddingTop="10dp"
                   android:text="Terms And Conditions"
                   android:textColor="@android:color/holo_blue_dark"
                   android:textStyle="italic" />
           </RelativeLayout>
        </android.support.v7.widget.CardView>




    </RelativeLayout>

    <Button
        android:id="@+id/btnenquirenow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Enquire Now"
        android:textColor="@color/white"
        />


</RelativeLayout>


</ScrollView>
