            <ToggleButton
                android:id="@+id/toggleButton8"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton3"
                android:layout_below="@+id/toggleButton3"
                android:layout_marginTop="50dp"
                android:textOff=""
                android:textOn=""
