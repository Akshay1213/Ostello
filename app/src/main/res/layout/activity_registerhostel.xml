                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton8"
                android:layout_alignStart="@+id/toggleButton8"
                android:text="CCTV"
                android:textAlignment="center">

            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton9"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton5"
                android:layout_alignTop="@+id/toggleButton8"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/ac"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton9"
                android:layout_alignStart="@+id/toggleButton9"
                android:text="AC"
                android:textAlignment="center"
                >

            </TextView>
            <ToggleButton
                android:id="@+id/toggleButton10"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton7"
                android:layout_alignTop="@+id/toggleButton9"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/electricity" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton10"
                android:layout_alignStart="@+id/toggleButton10"
                android:text="Electricity"
                android:textAlignment="center"


                />
            <ToggleButton
                android:id="@+id/toggleButton11"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton8"
                android:layout_below="@+id/toggleButton8"
                android:layout_marginTop="37dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/gym"
                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton11"
                android:layout_alignStart="@+id/toggleButton11"
                android:text="Gym"
                android:textAlignment="center"


                />


            <ToggleButton
                android:id="@+id/toggleButton12"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton9"
                android:layout_alignTop="@+id/toggleButton11"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/hot_water" />
            />

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton12"
                android:layout_alignStart="@+id/toggleButton12"
                android:text="Hot Water"
                android:textAlignment="center"


                />

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/toggleButton12"
                android:layout_alignStart="@+id/toggleButton10"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/tv"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton"
                android:layout_alignStart="@+id/toggleButton"
                android:text="TV"
                android:textAlignment="center"


                />

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/toggleButton11"
                android:layout_below="@+id/toggleButton11"
                android:layout_marginTop="35dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/cleaning" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton2"
                android:layout_alignStart="@+id/toggleButton2"
                android:text="Cleaning"
                android:textAlignment="center"


                />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/toggleButton2"
                android:layout_marginStart="45dp"
                android:layout_toEndOf="@+id/toggleButton2"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/parking"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton4"
                android:layout_alignStart="@+id/toggleButton4"
                android:text="Parking"
                android:textAlignment="center"

                />
            <ToggleButton
                android:id="@+id/toggleButton6"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/toggleButton"
                android:layout_alignTop="@+id/toggleButton4"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/washingmachine" />



            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="Washing Machine"
                android:layout_below="@+id/toggleButton6"
                android:layout_alignStart="@+id/toggleButton6"
                android:textAlignment="center"
                android:layout_marginRight="35dp"
                />

            <ToggleButton
                android:id="@+id/toggleButton13"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="48dp"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/mess"
                android:layout_below="@+id/toggleButton2"
                android:layout_alignStart="@+id/toggleButton2">

            </ToggleButton>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@+id/toggleButton13"
                android:layout_alignStart="@+id/toggleButton13"
                android:text="Mess"
                android:textAlignment="center"
                />

        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:text="Submit"
            android:id="@+id/button1"
            android:layout_below="@+id/layouttoggle"
            android:textColor="@color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</ScrollView>
