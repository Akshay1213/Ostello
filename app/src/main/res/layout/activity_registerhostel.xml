<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xoxytech.ostello.Registerhostel">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        tools:context="com.example.user.registerhostelform.MainActivity">
        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:id="@+id/layoutpersonalinfo"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personnel Details"
        android:textSize="20dp"
        android:focusableInTouchMode="true"
        android:id="@+id/textView2" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:focusableInTouchMode="true"
        android:layout_height="30dp"
        android:layout_marginStart="27dp"
        android:text="Name *"
        android:textSize="15dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_toEndOf="@+id/textView2"
        android:inputType="textAutoComplete"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Address *"
        android:textSize="15dp"
        android:id="@+id/addresstext"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <EditText android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:id="@+id/address"
        android:layout_alignTop="@+id/addresstext"
        android:layout_alignStart="@+id/editText"
        android:inputType="textAutoComplete"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Mobile No *"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/addresstext"
        android:layout_alignStart="@+id/addresstext" />
    <EditText android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:id="@+id/mobile"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/address" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Email Id *"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />
    <EditText android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"
        android:id="@+id/email"
        android:layout_alignTop="@+id/textView4"
        android:inputType="textEmailAddress"
        android:layout_alignStart="@+id/mobile" />
</RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:elevation="1dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="2.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:id="@+id/layouthostelinfo"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="10dp"
        android:layout_below="@id/layoutpersonalinfo"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardPreventCornerOverlap="true"
        android:paddingTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostel Details"
            android:textSize="20dp"
            android:id="@+id/textView5"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Hostel name *"
            android:id="@+id/hostelname"
            android:textSize="15dp"
            android:layout_alignBaseline="@+id/editText4"
            android:layout_alignBottom="@+id/editText4"
             />
        <EditText android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:id="@+id/editText4"
            android:layout_marginLeft="120dp"
            android:inputType="textAutoComplete"
            android:layout_below="@+id/textView5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addrs"
            android:text="Address *"
            android:textSize="15dp"
            android:layout_above="@+id/price"
            android:layout_alignEnd="@+id/textView"
            android:layout_below="@+id/editText4" />
        <EditText android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="80dp"
            android:id="@+id/addrsedit"
            android:layout_below="@+id/hostelname"
            android:singleLine="false"
            android:layout_alignStart="@+id/editText4"
            android:inputType="textAutoComplete"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price *"
            android:id="@+id/price"
            android:layout_below="@+id/addrsedit"
            android:layout_alignStart="@+id/textvacancy" />
        <EditText android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:id="@+id/priceedit"
            android:layout_below="@+id/addrsedit"
            android:layout_alignStart="@+id/addrsedit"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vacancy *"
            android:id="@+id/textvacancy"
            android:layout_below="@+id/priceedit"
            android:layout_alignEnd="@+id/addrs" />
        <EditText android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="40dp"
            android:id="@+id/vacancyedit"
            android:layout_below="@+id/priceedit"
            android:layout_alignStart="@+id/priceedit"
            android:inputType="number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vacancyedit"
            android:id="@+id/layoutgender"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/Gender"
                android:textSize="15dp"
                android:text="Gender *"
                android:layout_below="@+id/vacancyedit"
                android:layout_alignStart="@+id/type" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="female"
                    android:inputType="textAutoComplete"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="male"
                    android:id="@+id/male"

                    android:inputType="textAutoComplete"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Co-ed"
                    android:id="@+id/coed"
                    android:inputType="textAutoComplete"/>
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/type"
            android:text="Type *"
            android:textSize="15dp"
            android:layout_below="@+id/layoutgender"
             />
        <Spinner
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:id="@+id/spinner"
            android:layout_alignBottom="@+id/type"
             />
    </RelativeLayout>
    </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:elevation="1dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="2.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="10dp"
            android:layout_marginTop="0dp"
            android:id="@+id/layouttoggle"
            android:layout_below="@id/layouthostelinfo"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp"
            app:cardPreventCornerOverlap="true"
            android:paddingTop="0dp">
