<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="@color/Activityback"
    android:padding="10dp">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:id="@+id/card_view"-->
        <!--android:elevation="3dp"-->
        <!--android:layout_marginTop="0dp" >-->



        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            android:visibility="visible"
            android:id="@+id/ivhostel"/>
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            android:background="@drawable/shadow1"
            android:id="@+id/ivhosteltempback"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="hostel name"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/RvtextColor"
            android:id="@+id/hiddenid"

            />

        <TextView
            android:id="@+id/texthostelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textStyle="bold"
            android:text="hostel name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="20dp"
            android:textColor="@color/RvtextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="price"
            android:textStyle="bold"
            android:id="@+id/textPrice"
            android:background="@drawable/tp"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_above="@+id/textType" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sd"
            android:id="@+id/textType"
            android:background="@drawable/tp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/textSize"
            android:layout_toLeftOf="@+id/textPrice"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Small Text"
            android:textStyle="bold"
            android:background="@drawable/tp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white" />

    <!--</android.support.v7.widget.CardView>-->
</RelativeLayout>
