<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:elevation="1dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="1dp"
    app:cardPreventCornerOverlap="true"
    android:paddingTop="0dp">

        <ImageView
            android:id="@+id/ivhostel"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/texthostelName"
            android:visibility="visible" />
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="220dp"
            android:src="@drawable/shadow1"
            android:layout_below="@+id/texthostelName"
            android:layout_marginTop="10dp"
            android:id="@+id/ivhosteltempback"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="hostel name"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/RvtextColor"
            android:id="@+id/hiddenid"

            />

        <TextView
            android:id="@+id/texthostelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="hostel name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="25dp"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txtcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="price"
            android:id="@+id/textPrice"
            android:layout_marginTop="200dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textColor="@color/txtcolor"
             />

        <TextView
            android:id="@+id/textType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="sd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/txtcolor"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
             />

        <TextView
            android:id="@+id/textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/txtcolor"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="10dp"
             />


</android.support.v7.widget.CardView>
